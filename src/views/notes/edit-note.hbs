<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method='POST'>
            <input type="hidden" name="_method" value='PUT'>
                <div class="form-group">
                    <input placeholder='Titulo' value='{{note.title}}' name='title' class= 'form-control' type="text">
                    </div>
                    <div class="form-group">
                    <textarea placeholder='Descripcion' name='description' class='form-control'>{{note.description}}</textarea>
                    </div>
            <button type="submit" class='btn btn-primary btn-block' type='submit'>Guardar cambios</button>
            </form>
        </div>
    </div>
</div>